{
	"extends": [
    "plugin:flowtype/recommended",
		"airbnb",
		"prettier",
		"prettier/react"
	],
	"plugins": [
    "flowtype",
		"prettier"
  ],
  "rules": {
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "import/prefer-default-export": "off"
  },
  "parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 2016,
    "sourceType": "module",
    "ecmaFeatures": {
			"jsx": true
		}
	},
	"env": {
		"es6": true,
		"browser": true,
		"node": true,
    "jest": true
	}
}

